# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model Settings
MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-large

# Server Configuration
PORT=8787

# Security (optional - leave empty to disable bearer auth)
BEARER=dev-secret

# RAG Storage
RAG_PATH=./rag_store.json

# Tool Security - Allowlists
# Web Fetch: Comma-separated list of allowed URL prefixes
ALLOW_WEB_FETCH=https://api.github.com,https://example.com,https://httpbin.org

# File Read: Comma-separated list of allowed directory paths
ALLOW_FILE_READ=./docs,./notes,./data
